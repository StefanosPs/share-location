{
  "name": "user-login-hexagonal-node",
  "description": "A cloud-native node microservice boilerplate based on the hexagonal architecture. This microservice manage users and check users credentials.",
  "scripts": {
    "apidoc": "apidoc -i src/http-server/api -o apidoc",
    "jsdoc": "jsdoc --configure .jsdoc.json --verbose",
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production babel src -d dist -s",
    "cmd": "babel-node -- ./src/cli ",
    "debug": "babel-node --inspect ./src/index.js",
    "dev": "nodemon src/index.js | pino-pretty -c -t",
    "lint": "eslint --fix src",
    "start": "node dist/index.js",
    "test": "yarn test:unit & yarn teste2e:run",
    "pretest:unit": "rimraf reports/unit",
    "test:unit": "jest -ic jest/config.unit.js",
    "teste2e:run": "start-server-and-test teste2e:runserver http://localhost:3334/health cy:run",
    "teste2e:open": "start-server-and-test teste2e:runserver http://localhost:3334/health cy:open",
    "preteste2e:runserver": "yarn build",
    "teste2e:runserver": "cross-env DOTENV_CONFIG_PATH=.env.test node dist/index.js",
    "cy:open": "cypress open",
    "cy:run": " cypress run",
    "docker": "pm2-runtime start ecosystem.config.js",
    "docker-build": "docker build -t share_loc_user_image ."
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{css,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "execMap": {
      "js": "babel-node"
    }
  },
  "dependencies": {
    "@hapi/boom": "9.1.0",
    "amqplib": "0.5.5",
    "bcryptjs": "2.4.3",
    "commander": "3.0.2",
    "dotenv": "8.1.0",
    "fs": "^0.0.1-security",
    "js-yaml": "^3.14.0",
    "koa": "2.8.2",
    "koa-basic-auth": "^4.0.0",
    "koa-bodyparser": "4.2.1",
    "koa-helmet": "5.2.0",
    "koa-pino-logger": "2.1.3",
    "koa-router": "7.4.0",
    "path": "^0.12.7",
    "pg": "^8.3.3",
    "pg-hstore": "^2.3.3",
    "pino": "5.13.4",
    "sequelize": "^6.3.5",
    "sqlite3": "^5.0.0",
    "cross-env": "6.0.3",
    "uuid": "3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "7.6.2",
    "@babel/core": "7.6.2",
    "@babel/node": "7.6.2",
    "@babel/preset-env": "7.6.2",
    "@babel/register": "7.11.5",
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "apidoc": "0.17.7",
    "babel-jest": "26.6.0",
    "babel-plugin-module-resolver": "3.2.0", 
    "cypress": "5.3.0",
    "eslint": "6.5.1",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "6.4.0",
    "eslint-import-resolver-babel-module": "5.1.0",
    "eslint-plugin-cypress": "2.11.2",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-prettier": "3.1.1",
    "husky": ">=1",
    "jest": "26.6.0",
    "jest-html-reporter": "3.3.0",
    "jsdoc": "3.6.3",
    "lint-staged": ">=8",
    "minami": "1.2.3",
    "nodemon": "1.19.3",
    "pino-pretty": "3.2.1",
    "prettier": "1.18.2",
    "rimraf": "3.0.0",
    "start-server-and-test": "1.11.5"
  },
  "engines": {
    "node": ">=10.22.1",
    "npm": ">=6.9"
  }
}
